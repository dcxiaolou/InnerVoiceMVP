<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dcxiaolou.innervoicemvp.ui.ProportionImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:widthProportion="605"
        app:heightProportion="1075"
        android:src="@drawable/unlogin_bg"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="信息功能需要登录才能使用哟"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="去登录"
        android:textColor="@color/white"
        android:background="@drawable/shape_corner_splash_bg"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_gravity="center" />

</FrameLayout>
